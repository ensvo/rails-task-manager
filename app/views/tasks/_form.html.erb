<%= form_for @task do |f| -%>
		<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>	
		</div>
		<div class="form-group">
			<%= f.label :details %>
			<%= f.text_area :details, class: 'form-control' %>	
		</div>
		<% if @task.id %>
		<div class="form-group">
			<%= f.check_box :completed %>
			<%= f.label :completed %>	
		</div>
		<% end %>
		<p><%= f.submit class: 'btn btn-primary m-2' %></p>
<% end -%>